{
	"compilerOptions": {
		"module": "es2020",
		"target": "es2019",
		"declaration": true,
		"outDir": "./lib",
		"jsx": "preserve",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"moduleResolution": "Node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.(spec|stories).(ts|tsx)"]
}
